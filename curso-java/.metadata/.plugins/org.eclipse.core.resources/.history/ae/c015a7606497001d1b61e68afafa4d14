//resposta do professor
		void acelerar(){
			
			velocidadeAtual += delta;
		}
		void frear(){
		if(velocidadeAtual > >= delta) {
			velocidadeAtual -= delta;
		}else{
			velocidadeAtual = 0
		}
		
		public String toString(){
			return "Velocidade atual Ã©" + velocidadeAtual + "km/h";
		}
	}

}
