package oo.composicao;

public class Carro {
	Motor motor = new Motor();//Instância -> aqui indoco que o Carro tem um motor, para poder ter acesso a Classe Motor;
	
	void acelerar(){//metodo acelerar, pertence ao carro porém irá maniplar o motor;
		if(motor.fatorInjecao < 2.6) {
			motor.fatorInjecao += 0.4;//toda vez que chamar esse metodo irá acrescentar 0.4 no giro do motor;			
		}
	}
	void frear(){
		if(motor.fatorInjecao > 0.5) {
			motor.fatorInjecao -= 0.4;			
		}
	}
	void ligar() {
		motor.ligado = true;
	}
	
	void desligar() {
		motor.ligado  = false;
	}
	boolean estaLigado() {
		return motor.ligado;
	}
}
