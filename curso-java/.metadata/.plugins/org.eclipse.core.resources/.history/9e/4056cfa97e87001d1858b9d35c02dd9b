package classe;

public class DesafioData {
	int dia;
	int mes;
	int ano;
	
	//minha resposta
	String obterDataFormatada() {
		return (dia + "/"+ mes + "/"+ ano) ;
	}
	//resposta do professor
	String obterDataFormatada2() {
		return String.format("%d/%d/%d", dia , mes , ano ) ;
	}
	
	DesafioData(){
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	DesafioData(int diaInicial, int mesInicial, int anoInicial){
		dia = 1;
		mes = 1;
		ano = 1970;
	}
}
